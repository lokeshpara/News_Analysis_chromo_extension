{
  "manifest_version": 3,
  "name": "News Analyzer",
  "version": "1.0",
  "description": "Fetch and analyze news articles",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ]
} 